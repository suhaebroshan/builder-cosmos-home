{
  "productName": "NYX OS",
  "version": "1.0.0",
  "identifier": "com.nyx.os",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:client",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "NYX OS",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "fullscreen": false,
        "maximized": true,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "center": true,
        "skipTaskbar": false,
        "theme": "dark"
      }
    ],
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "localhost",
          "windows": ["main"],
          "enableTauriAPI": true
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "NYX OS - Built by Suhaeb Roshan",
    "category": "Utility",
    "shortDescription": "NYX Operating System - A beautiful, AI-powered desktop environment",
    "longDescription": "NYX OS is a revolutionary operating system interface that combines beautiful design with powerful AI capabilities. Built for the future of computing.",
    "deb": {
      "depends": []
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "",
      "exceptionDomain": "",
      "signingIdentity": null,
      "hardenedRuntime": true,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "os": {
      "version": "*"
    },
    "fs": {
      "version": "*",
      "scope": {
        "allow": ["$APPDATA/**", "$DOCUMENT/**", "$DESKTOP/**", "$DOWNLOAD/**", "$HOME/**"],
        "deny": []
      }
    },
    "shell": {
      "version": "*",
      "scope": {
        "allow": [
          {
            "name": "open",
            "cmd": "open",
            "args": true
          }
        ],
        "deny": []
      }
    },
    "window": {
      "version": "*"
    },
    "notification": {
      "version": "*"
    }
  }
}